/include/ "socfpga_cyclone5.dtsi"

/ {
	model = "EBV SoCrates";
	compatible = "ebv,socrates", "altr,socfpga";

	chosen {
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x0 0x0>;
	};

	leds: gpio-leds {
	};
};

&leds {
	compatible = "gpio-leds";

	led@0 {
		label = "0";
		gpios = <&gpio0 28 1>;
		linux,default-trigger = "heartbeat";
	};

	led@1 {
		label = "1";
		gpios = <&gpio1 19 1>;
	};

	led@2 {
		label = "2";
		gpios = <&gpio1 25 1>;
	};
};

&gmac1 {
	phy-mode = "rgmii";
	status = "okay";
};

&mmc {
	status = "okay";
};
